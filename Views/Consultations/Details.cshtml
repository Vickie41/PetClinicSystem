@model PetClinicSystem.Models.ConsultationDetailsViewModel
@using PetClinicSystem.Models

@{
    ViewData["Title"] = $"Consultation Details - {Model.Patient?.Name}";
    ViewData["ActivePage"] = "Consultations";

    
    // Use the forms from the ViewModel
    var treatmentForm = Model.TreatmentForm;
    var prescriptionForm = Model.PrescriptionForm;
    var diagnosticForm = Model.DiagnosticForm;
    var vaccineForm = Model.VaccineForm;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-notes-medical me-2"></i>@ViewData["Title"]
            </h2>
            <div class="text-muted small">
                @Model.ConsultationDate.ToString("MMMM dd, yyyy") with @Model.Vet?.Username
            </div>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Veterinarian"))
            {
                <a asp-action="QuickActions" asp-route-id="@Model.ConsultationId" class="btn btn-primary me-2">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ConsultationId" class="btn btn-outline-primary me-2">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Consultation Notes -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-file-medical me-2"></i>Consultation Notes</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="fw-bold">Diagnosis</label>
                                <div class="p-2 bg-light rounded">@Model.Diagnosis</div>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Vital Signs</label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <div class="p-2 bg-light rounded">
                                            <small class="text-muted">Weight</small>
                                            <div>@(Model.Weight?.ToString("0.0") ?? "--") kg</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-2 bg-light rounded">
                                            <small class="text-muted">Temperature</small>
                                            <div>@(Model.Temperature?.ToString("0.0") ?? "--") °C</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-2 bg-light rounded">
                                            <small class="text-muted">Heart Rate</small>
                                            <div>@(Model.HeartRate?.ToString() ?? "--") bpm</div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-2 bg-light rounded">
                                            <small class="text-muted">Respiration Rate</small>
                                            <div>@(Model.RespirationRate?.ToString() ?? "--") rpm</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="fw-bold">Notes</label>
                                <div class="p-2 bg-light rounded" style="min-height: 100px;">
                                    @if (string.IsNullOrEmpty(Model.Notes))
                                    {
                                        <span class="text-muted">No notes recorded</span>
                                    }
                                    else
                                    {
                                        @Model.Notes
                                    }
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold">Follow Up</label>
                                <div class="p-2 bg-light rounded">
                                    @if (Model.FollowUpDate.HasValue)
                                    {
                                        <span class="badge bg-@(Model.FollowUpDate < DateTime.Today ? "danger" : "info")">
                                            @Model.FollowUpDate.Value.ToString("MMMM dd, yyyy")
                                        </span>
                                        @if (Model.IsFollowUp)
                                        {
                                            <span class="ms-2">(Follow-up required)</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No follow up scheduled</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Treatments -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="fas fa-procedures me-2"></i>Treatments</h5>
                    @if (User.IsInRole("Veterinarian"))
                    {
                        <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addTreatmentModal">
                            <i class="fas fa-plus me-1"></i>Add Treatment
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.ConsultationTreatments?.Any() ?? false)
                    {
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Treatment</th>
                                    <th>Details</th>
                                    <th>Cost</th>
                                    <th>Notes</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in Model.ConsultationTreatments)
                                {
                                    <tr>
                                        <td>@t.Treatment?.Name</td>
                                        <td>@t.Details</td>
                                        <td>@t.Cost?.ToString("C")</td>
                                        <td>@t.Notes</td>
                                        <td>
                                            @if (User.IsInRole("Veterinarian"))
                                            {
                                                <form asp-action="DeleteTreatment" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@t.ConsultationTreatmentId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to delete this treatment?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-procedures fa-3x mb-3"></i>
                            <p>No treatments recorded for this consultation</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Prescriptions -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="fas fa-prescription-bottle-alt me-2"></i>Prescriptions</h5>
                    @if (User.IsInRole("Veterinarian"))
                    {
                        <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addPrescriptionModal">
                            <i class="fas fa-plus me-1"></i>Add Prescription
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Prescriptions?.Any() ?? false)
                    {
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Medication</th>
                                    <th>Dosage</th>
                                    <th>Frequency</th>
                                    <th>Duration</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model.Prescriptions)
                                {
                                    <tr>
                                        <td>@p.MedicationName</td>
                                        <td>@p.Dosage</td>
                                        <td>@p.Frequency</td>
                                        <td>@p.Duration</td>
                                        <td>
                                            @if (User.IsInRole("Veterinarian"))
                                            {
                                                <form asp-action="DeletePrescription" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@p.PrescriptionId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to delete this prescription?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-prescription-bottle-alt fa-3x mb-3"></i>
                            <p>No prescriptions recorded for this consultation</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Diagnostic Tests -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="fas fa-microscope me-2"></i>Diagnostic Tests</h5>
                    @if (User.IsInRole("Veterinarian"))
                    {
                        <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addDiagnosticModal">
                            <i class="fas fa-plus me-1"></i>Add Test
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.DiagnosticTests?.Any() ?? false)
                    {
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Test</th>
                                    <th>Date</th>
                                    <th>Results</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var test in Model.DiagnosticTests)
                                {
                                    <tr>
                                        <td>@test.TestName</td>
                                        <td>@test.TestDate.ToString("d")</td>
                                        <td>@(string.IsNullOrEmpty(test.Results) ? "Pending" : test.Results)</td>
                                        <td>
                                            @if (User.IsInRole("Veterinarian"))
                                            {
                                                <form asp-action="DeleteDiagnosticTest" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@test.TestId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to delete this test?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-microscope fa-3x mb-3"></i>
                            <p>No diagnostic tests recorded for this consultation</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Vaccines -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0"><i class="fas fa-syringe me-2"></i>Vaccinations</h5>
                    @if (User.IsInRole("Veterinarian"))
                    {
                        <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addVaccineModal">
                            <i class="fas fa-plus me-1"></i>Add Vaccine
                        </button>
                    }
                </div>
                <div class="card-body">
                    @if (Model.VaccineRecords?.Any() ?? false)
                    {
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Vaccine</th>
                                    <th>Date Given</th>
                                    <th>Next Due</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model.VaccineRecords)
                                {
                                    <tr>
                                        <td>@v.Vaccine?.Name</td>
                                        <td>@v.VaccinationDate.ToString("d")</td>
                                        <td>
                                            @if (v.NextDueDate.HasValue)
                                            {
                                                <span class="badge bg-@(v.NextDueDate < DateTime.Today ? "danger" : "success")">
                                                    @v.NextDueDate.Value.ToString("d")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (User.IsInRole("Veterinarian"))
                                            {
                                                <form asp-action="DeleteVaccine" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@v.RecordId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to delete this vaccine record?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-syringe fa-3x mb-3"></i>
                            <p>No vaccinations recorded for this consultation</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar: Patient & Vet -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-paw me-2"></i>Patient</h5>
                </div>
                <div class="card-body">
                    <h5 class="mb-0">@Model.Patient?.Name</h5>
                    <div class="text-muted">@Model.Patient?.Species | @Model.Patient?.Breed</div>
                    <div class="mt-2"><strong>Gender:</strong> @Model.Patient?.Gender</div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-user-md me-2"></i>Veterinarian</h5>
                </div>
                <div class="card-body">
                    <h5 class="mb-0">@Model.Vet?.Username</h5>
                    <div class="text-muted">@Model.Vet?.Email</div>
                </div>
            </div>
    </div>
</div>

<!-- Modals for adding new items -->
@if (User.IsInRole("Veterinarian"))
    {
        <!-- Add Treatment Modal -->
        <div class="modal fade" id="addTreatmentModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title">Add Treatment</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="AddTreatment" method="post">
                        <div class="modal-body">
                            <input type="hidden" asp-for="@treatmentForm.ConsultationId" />
                            <div class="mb-3">
                                <label asp-for="@treatmentForm.SelectedTreatmentId" class="form-label"></label>
                                <select asp-for="@treatmentForm.SelectedTreatmentId" asp-items="@treatmentForm.AvailableTreatments" class="form-select">
                                    <option value="">Select Treatment</option>
                                </select>
                                <span asp-validation-for="@treatmentForm.SelectedTreatmentId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@treatmentForm.Details" class="form-label"></label>
                                <textarea asp-for="@treatmentForm.Details" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@treatmentForm.Cost" class="form-label"></label>
                                <input asp-for="@treatmentForm.Cost" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="@treatmentForm.Notes" class="form-label"></label>
                                <textarea asp-for="@treatmentForm.Notes" class="form-control" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add Treatment</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Add Prescription Modal -->
        <div class="modal fade" id="addPrescriptionModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-success text-white">
                        <h5 class="modal-title">Add Prescription</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="AddPrescription" method="post">
                        <div class="modal-body">
                            <input type="hidden" asp-for="@prescriptionForm.ConsultationId" />
                            <input type="hidden" asp-for="@prescriptionForm.PatientId" />
                            <div class="mb-3">
                                <label asp-for="@prescriptionForm.MedicationName" class="form-label"></label>
                                <input asp-for="@prescriptionForm.MedicationName" class="form-control" />
                                <span asp-validation-for="@prescriptionForm.MedicationName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@prescriptionForm.Dosage" class="form-label"></label>
                                <input asp-for="@prescriptionForm.Dosage" class="form-control" />
                                <span asp-validation-for="@prescriptionForm.Dosage" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@prescriptionForm.Frequency" class="form-label"></label>
                                <input asp-for="@prescriptionForm.Frequency" class="form-control" />
                                <span asp-validation-for="@prescriptionForm.Frequency" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@prescriptionForm.Duration" class="form-label"></label>
                                <input asp-for="@prescriptionForm.Duration" class="form-control" />
                                <span asp-validation-for="@prescriptionForm.Duration" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@prescriptionForm.Instructions" class="form-label"></label>
                                <textarea asp-for="@prescriptionForm.Instructions" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3 form-check">
                                        <input asp-for="@prescriptionForm.IsDispensed" class="form-check-input" />
                                        <label asp-for="@prescriptionForm.IsDispensed" class="form-check-label"></label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="@prescriptionForm.Refills" class="form-label"></label>
                                        <input asp-for="@prescriptionForm.Refills" class="form-control" type="number" min="0" max="10" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Add Prescription</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Add Diagnostic Test Modal -->
        <div class="modal fade" id="addDiagnosticModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-white">
                        <h5 class="modal-title">Add Diagnostic Test</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="AddDiagnosticTest" method="post">
                        <div class="modal-body">
                            <input type="hidden" asp-for="@diagnosticForm.ConsultationId" />
                            <!-- Test Type Selection -->
                            <div class="mb-3">
                                <label class="form-label">Test Type</label>
                                <select class="form-select" id="testTypeSelect" required>
                                    <option value="">-- Select Test Type --</option>
                                    <option value="laboratory">Laboratory Tests</option>
                                    <option value="imaging">Imaging Tests</option>
                                    <option value="specialized">Specialized Tests</option>
                                    <option value="preventive">Preventive/Routine Screening</option>
                                    <option value="other">Other Tests</option>
                                </select>
                            </div>

                            <!-- Test Name Selection (will be populated based on Test Type) -->
                            <div class="mb-3">
                                <label asp-for="@diagnosticForm.TestName" class="form-label"></label>
                                <select asp-for="@diagnosticForm.TestName" class="form-select" id="testNameSelect" required>
                                    <option value="">-- Select Test Type First --</option>
                                </select>
                                <span asp-validation-for="@diagnosticForm.TestName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@diagnosticForm.Results" class="form-label"></label>
                                <textarea asp-for="@diagnosticForm.Results" class="form-control" rows="4" placeholder="Enter test results..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-warning">Add Test</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Add Vaccine Modal -->
        <div class="modal fade" id="addVaccineModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-secondary text-white">
                        <h5 class="modal-title">Add Vaccination</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="AddVaccine" method="post">
                        <div class="modal-body">
                            <input type="hidden" asp-for="@vaccineForm.ConsultationId" />
                            <input type="hidden" asp-for="@vaccineForm.PatientId" />
                            <div class="mb-3">
                                <label asp-for="@vaccineForm.SelectedVaccineId" class="form-label"></label>
                                <select asp-for="@vaccineForm.SelectedVaccineId" asp-items="@vaccineForm.AvailableVaccines" class="form-select">
                                    <option value="">Select Vaccine</option>
                                </select>
                                <span asp-validation-for="@vaccineForm.SelectedVaccineId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@vaccineForm.DateGiven" class="form-label"></label>
                                <input asp-for="@vaccineForm.DateGiven" class="form-control" type="date" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="@vaccineForm.NextDueDate" class="form-label"></label>
                                <input asp-for="@vaccineForm.NextDueDate" class="form-control" type="date" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add Vaccine</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const testTypeSelect = document.getElementById('testTypeSelect');
            const testNameSelect = document.getElementById('testNameSelect');

            // Define test options for each category
            const testOptions = {
                laboratory: [
                    'Complete Blood Count (CBC)',
                    'Biochemistry Panel',
                    'Urinalysis',
                    'Fecal Exam',
                    'Heartworm Test',
                    'FeLV/FIV Test (Cats)',
                    'Blood Chemistry Profile',
                    'Coagulation Profile',
                    'Thyroid Panel',
                    'Cortisol Level Test'
                ],
                imaging: [
                    'X-ray (Radiography)',
                    'Ultrasound',
                    'Echocardiogram',
                    'CT Scan',
                    'MRI',
                    'Digital Radiography',
                    'Contrast Radiography',
                    'Fluoroscopy'
                ],
                specialized: [
                    'Skin Scraping/Cytology',
                    'Allergy Testing',
                    'Endoscopy',
                    'Blood Pressure Measurement',
                    'Electrocardiogram (ECG/EKG)',
                    'Bone Marrow Aspirate',
                    'Cerebrospinal Fluid Analysis',
                    'Joint Fluid Analysis',
                    'Biopsy',
                    'PCR Testing'
                ],
                preventive: [
                    'Annual Wellness Bloodwork',
                    'Senior Pet Panel',
                    'Thyroid Function Test (T4/TSH)',
                    'Glucose Curve (Diabetes Monitoring)',
                    'Pre-anesthetic Bloodwork',
                    'Dental Health Screening',
                    'Wellness Profile',
                    'Geriatric Screening Panel'
                ],
                other: [
                    'Culture and Sensitivity',
                    'Parasite Screening',
                    'Toxicology Screen',
                    'Vitamin Level Testing',
                    'Genetic Testing',
                    'Infectious Disease Panel',
                    'Autoimmune Testing',
                    'Hormone Level Testing'
                ]
            };

            // Update test names based on selected test type
            testTypeSelect.addEventListener('change', function() {
                const selectedType = this.value;
                testNameSelect.innerHTML = '<option value="">-- Select Test Name --</option>';

                if (selectedType && testOptions[selectedType]) {
                    testOptions[selectedType].forEach(test => {
                        const option = document.createElement('option');
                        option.value = test;
                        option.textContent = test;
                        testNameSelect.appendChild(option);
                    });
                }
            });

            // Form validation
            const diagnosticForm = document.querySelector('form[action*="AddDiagnosticTest"]');
            if (diagnosticForm) {
                diagnosticForm.addEventListener('submit', function(e) {
                    const testType = testTypeSelect.value;
                    const testName = testNameSelect.value;

                    if (!testType || !testName) {
                        e.preventDefault();
                        alert('Please select both Test Type and Test Name');
                    }
                });
            }
        });
    </script>
