@model PetClinicSystem.Models.ConsultationViewModel

@{
    ViewData["Title"] = "Create Consultation";
    ViewData["ActivePage"] = "Consultations";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-notes-medical me-2"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" id="consultationForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label">Patient *</label>
                            <select asp-for="PatientId" class="form-select" asp-items="Model.AvailablePatients" required>
                                <option value="">Select Patient</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Veterinarian</label>
                            <input type="text" class="form-control" value="@Model.VetName" disabled>
                            <small class="text-muted">Consultations are automatically assigned to the logged-in veterinarian</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConsultationDate" class="form-label">Date *</label>
                            <input asp-for="ConsultationDate" type="datetime-local" class="form-control" required />
                            <span asp-validation-for="ConsultationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label">Weight (kg)</label>
                            <input asp-for="Weight" class="form-control" type="number" step="0.1" min="0.1" max="200" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Temperature" class="form-label">Temperature (°C)</label>
                            <input asp-for="Temperature" class="form-control" type="number" step="0.1" min="30" max="45" />
                            <span asp-validation-for="Temperature" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="HeartRate" class="form-label">Heart Rate (bpm)</label>
                            <input asp-for="HeartRate" class="form-control" type="number" min="20" max="300" />
                            <span asp-validation-for="HeartRate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RespirationRate" class="form-label">Respiration Rate (bpm)</label>
                            <input asp-for="RespirationRate" class="form-control" type="number" min="5" max="100" />
                            <span asp-validation-for="RespirationRate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Diagnosis" class="form-label">Diagnosis</label>
                            <input asp-for="Diagnosis" class="form-control" maxlength="500" />
                            <span asp-validation-for="Diagnosis" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" maxlength="1000"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3 form-check">
                            <input asp-for="IsFollowUp" class="form-check-input" id="IsFollowUp" />
                            <label asp-for="IsFollowUp" class="form-check-label">Follow Up Required</label>
                        </div>

                        <div class="mb-3" id="followUpDateGroup" style="display: none;">
                            <label asp-for="FollowUpDate" class="form-label">Follow Up Date</label>
                            <input asp-for="FollowUpDate" type="date" class="form-control" />
                            <span asp-validation-for="FollowUpDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary" id="submitButton">
                        <i class="fas fa-save me-2"></i>Create Consultation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Set default consultation date to now
            if (!$('#ConsultationDate').val()) {
                const now = new Date();
                // Format as datetime-local requires (YYYY-MM-DDTHH:mm)
                const formattedDate = now.toISOString().slice(0, 16);
                $('#ConsultationDate').val(formattedDate);
            }

            // Show/hide follow up date based on checkbox
            $('#IsFollowUp').change(function() {
                $('#followUpDateGroup').toggle(this.checked);
                if (this.checked) {
                    // Set default follow-up date to 7 days from now
                    const followUpDate = new Date();
                    followUpDate.setDate(followUpDate.getDate() + 7);
                    $('#FollowUpDate').val(followUpDate.toISOString().split('T')[0]);
                }
            }).trigger('change');

            // Prevent double form submission
            $('#consultationForm').on('submit', function() {
                $('#submitButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Creating...');
            });
        });
    </script>
}