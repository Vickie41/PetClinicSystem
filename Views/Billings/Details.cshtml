@model PetClinicSystem.Models.Billing

@{
    ViewData["Title"] = "Invoice Details";
    ViewData["ActivePage"] = "Billings";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-receipt me-2"></i>@ViewData["Title"]
            </h2>
            <div class="text-muted small">
                Invoice #@Model.BillId | @Model.BillDate?.ToString("MMMM dd, yyyy")
            </div>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Edit" asp-route-id="@Model.BillId" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Print" asp-route-id="@Model.BillId" class="btn btn-outline-info me-2" target="_blank">
                <i class="fas fa-print me-2"></i>Print
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Invoice Items
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th>Description</th>
                                    <th>Qty</th>
                                    <th>Unit Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.BillingDetails)
                                {
                                    <tr>
                                        <td>@item.ItemType</td>
                                        <td>@item.Description</td>
                                        <td>@(item.Quantity?.ToString() ?? "1")</td>
                                        <td>@item.UnitPrice.ToString("C")</td>
                                        <td>@item.TotalPrice.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="4" class="text-end fw-bold">Subtotal:</td>
                                    <td class="fw-bold">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                                @if (Model.PaidAmount.HasValue && Model.PaidAmount > 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-end fw-bold">Paid Amount:</td>
                                        <td class="fw-bold text-success">-@Model.PaidAmount?.ToString("C")</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="4" class="text-end fw-bold">Balance Due:</td>
                                    <td class="fw-bold @(Model.Balance > 0 ? "text-danger" : "text-success")">
                                        @Model.Balance?.ToString("C")
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-notes-medical me-2"></i>Related Service
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Consultation != null)
                    {
                        <div class="mb-3">
                            <div class="fw-bold">Service Type</div>
                            <div>Consultation</div>
                        </div>
                        <div class="mb-3">
                            <div class="fw-bold">Date</div>
                            <div>@Model.Consultation.ConsultationDate?.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="mb-3">
                            <div class="fw-bold">Diagnosis</div>
                            <div>@(string.IsNullOrEmpty(Model.Consultation.Diagnosis) ? "No diagnosis recorded" : Model.Consultation.Diagnosis)</div>
                        </div>
                        <a asp-controller="Consultations" asp-action="Details" asp-route-id="@Model.ConsultationId" class="btn btn-outline-primary">
                            View Consultation Details
                        </a>
                    }
                    else if (Model.Appointment != null)
                    {
                        <div class="mb-3">
                            <div class="fw-bold">Service Type</div>
                            <div>Appointment</div>
                        </div>
                        <div class="mb-3">
                            <div class="fw-bold">Date</div>
                            <div>@Model.Appointment.AppointmentDate.ToString("MMMM dd, yyyy")</div>
                        </div>
                        <div class="mb-3">
                            <div class="fw-bold">Reason</div>
                            <div>@Model.Appointment.Reason</div>
                        </div>
                        <a asp-controller="Appointments" asp-action="Details" asp-route-id="@Model.AppointmentId" class="btn btn-outline-primary">
                            View Appointment Details
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Invoice Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="fw-bold">Invoice Number</div>
                        <div>@Model.BillId</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Invoice Date</div>
                        <div>@Model.BillDate?.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Due Date</div>
                        <div>
                            @if (Model.DueDate.HasValue)
                            {
                                var isOverdue = Model.DueDate < DateTime.Today && Model.Balance > 0;
                                <span class="@(isOverdue ? "text-danger" : "")">
                                    @Model.DueDate?.ToString("MMMM dd, yyyy")
                                    @if (isOverdue)
                                    {
                                        <span class="badge bg-danger ms-2">Overdue</span>
                                    }
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Status</div>
                        <div>
                            @if (Model.Balance <= 0)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-@(Model.DueDate < DateTime.Today ? "danger" : "warning")">
                                    @(Model.DueDate < DateTime.Today ? "Overdue" : "Pending")
                                </span>
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Total Amount</div>
                        <div>@Model.TotalAmount.ToString("C")</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Paid Amount</div>
                        <div>@Model.PaidAmount?.ToString("C")</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Balance Due</div>
                        <div class="@(Model.Balance > 0 ? "text-danger fw-bold" : "text-success fw-bold")">
                            @Model.Balance?.ToString("C")
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-paw me-2"></i>Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.Consultation?.Patient?.PhotoPath))
                        {
                            <img src="@Model.Consultation.Patient.PhotoPath" class="avatar-lg rounded-circle me-3" alt="@Model.Consultation.Patient.Name">
                        }
                        else if (!string.IsNullOrEmpty(Model.Appointment?.Patient?.PhotoPath))
                        {
                            <img src="@Model.Appointment.Patient.PhotoPath" class="avatar-lg rounded-circle me-3" alt="@Model.Appointment.Patient.Name">
                        }
                        <div>
                            <h5 class="mb-0">@Model.Consultation?.Patient?.Name ?? Model.Appointment?.Patient?.Name</h5>
                            <div class="text-muted">@Model.Consultation?.Patient?.Species ?? Model.Appointment?.Patient?.Species</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="fw-bold">Owner</div>
                                <div>@Model.Consultation?.Patient?.Owner?.FirstName ?? Model.Appointment?.Patient?.Owner?.FirstName @Model.Consultation?.Patient?.Owner?.LastName ?? Model.Appointment?.Patient?.Owner?.LastName</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="fw-bold">Contact</div>
                                <div>@Model.Consultation?.Patient?.Owner?.Phone ?? Model.Appointment?.Patient?.Owner?.PhoneNumber</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Balance > 0)
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-credit-card me-2"></i>Make Payment
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="RecordPayment" method="post">
                            <input type="hidden" name="billId" value="@Model.BillId" />

                            <div class="mb-3">
                                <label class="form-label">Payment Amount</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" name="amount"
                                           step="0.01" min="0.01" max="@Model.Balance"
                                           value="@Model.Balance">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Payment Method</label>
                                <select class="form-select" name="method">
                                    <option value="Cash">Cash</option>
                                    <option value="Credit Card">Credit Card</option>
                                    <option value="Debit Card">Debit Card</option>
                                    <option value="Check">Check</option>
                                    <option value="Bank Transfer">Bank Transfer</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Payment Date</label>
                                <input type="date" class="form-control" name="paymentDate"
                                       value="@DateTime.Today.ToString("yyyy-MM-dd")">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Notes</label>
                                <textarea class="form-control" name="notes" rows="2"></textarea>
                            </div>

                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check-circle me-2"></i>Record Payment
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>