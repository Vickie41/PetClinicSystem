@model IEnumerable<PetClinicSystem.Models.DiagnosticTest>

@{
    ViewData["Title"] = "Diagnostic Tests";
    ViewData["ActivePage"] = "DiagnosticTests";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-flask me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        @* @if (User.IsInRole("Veterinarian"))
        {
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>New Test
                </a>
            </div>
        } *@
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="diagnosticTestsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Test Details</th>
                            <th>Patient</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Results</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.TestName</strong>
                                    <div class="text-muted small">@item.TestType</div>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <div class="text-muted small mt-1">
                                            <i class="fas fa-comment-alt me-1"></i> @item.Notes
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (item.Consultation?.Patient != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Consultation.Patient.PhotoPath))
                                            {
                                                <img src="@item.Consultation.Patient.PhotoPath" class="avatar-sm rounded-circle me-2" alt="@item.Consultation.Patient.Name">
                                            }
                                            else
                                            {
                                                <div class="avatar-sm bg-soft-primary rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-paw"></i>
                                                </div>
                                            }
                                            <div>
                                                <div>@item.Consultation.Patient.Name</div>
                                                <div class="text-muted small">@item.Consultation.Patient.Species</div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>
                                    @item.TestDate
                                </td>
                                <td>
                                    @switch (item.Status?.ToLower())
                                    {
                                        case "pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case "completed":
                                            <span class="badge bg-success">Completed</span>
                                            break;
                                        case "cancelled":
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Results))
                                    {
                                        if (item.Results.Length > 30)
                                        {
                                            <span class="d-inline-block text-truncate" style="max-width: 150px;"
                                                  title="@item.Results">@item.Results</span>
                                        }
                                        else
                                        {
                                            @item.Results
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No results</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.FilePath))
                                    {
                                        <div class="mt-1">
                                            <a href="@item.FilePath" target="_blank" class="btn btn-sm btn-outline-primary btn-xs">
                                                <i class="fas fa-file-download me-1"></i>View Report
                                            </a>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@item.TestId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Veterinarian"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.TestId" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.TestId">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title {
            font-weight: 600;
            color: #2c3e50;
        }

        .table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .avatar-sm {
            width: 32px;
            height: 32px;
            object-fit: cover;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#diagnosticTestsTable').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: -1 }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search tests...",
                },
                order: [[2, 'desc']] // Sort by date descending by default
            });

            // Delete button handler (only for veterinarians)
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('/DiagnosticTests/Delete/' + id, function() {
                            Swal.fire(
                                'Deleted!',
                                'The test record has been deleted.',
                                'success'
                            ).then(() => location.reload());
                        }).fail(function() {
                            Swal.fire(
                                'Error!',
                                'Something went wrong.',
                                'error'
                            );
                        });
                    }
                });
            });
        });
    </script>
}