@model IEnumerable<PetClinicSystem.Models.ActivityLog>

@{
    ViewData["Title"] = "Activity Log";
    ViewData["ActivePage"] = "ActivityLog";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-history me-2"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="activityLogTable">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Action</th>
                            <th>Type</th>
                            <th>Message</th>
                            <th>Details</th>
                            <th>IP Address</th>
                            <th>Timestamp</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User?.Username</td>
                                <td>@item.Action</td>
                                <td>@item.Type</td>
                                <td>@item.Message</td>
                                <td>@item.Details</td>
                                <td>@item.IpAddress</td>
                                <td>@item.Timestamp.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title {
            font-weight: 600;
            color: #2c3e50;
        }

        .table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#activityLogTable').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [] } // No actions column, so leave empty
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search logs..."
                }
            });
        });
    </script>
}
