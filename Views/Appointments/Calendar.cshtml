@model IEnumerable<PetClinicSystem.Models.AppointmentViewModel>

@{
    ViewData["Title"] = "Appointments Calendar";
    ViewData["ActivePage"] = "Appointments";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-body">
            <div id="calendar"></div>
        </div>
    </div>
</div>

<!-- Appointment Details Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventModalLabel">Appointment Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Patient:</label>
                    <p id="modalPatient"></p>
                </div>
                <div class="form-group">
                    <label>Veterinarian:</label>
                    <p id="modalVet"></p>
                </div>
                <div class="form-group">
                    <label>Time:</label>
                    <p id="modalTime"></p>
                </div>
                <div class="form-group">
                    <label>Reason:</label>
                    <p id="modalReason"></p>
                </div>
                <div class="form-group">
                    <label>Status:</label>
                    <p id="modalStatus"></p>
                </div>
            </div>
            <div class="modal-footer">
                <a id="modalEditLink" href="#" class="btn btn-primary">Edit</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" />
    <style>
        #calendar {
            max-width: 1100px;
            margin: 0 auto;
        }

        .fc-event {
            cursor: pointer;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: '/Appointments/GetCalendarEvents',
                eventClick: function(info) {
                    // Fetch appointment details
                    $.get('/Appointments/Details/' + info.event.id, function(data) {
                        // You'll need to parse the HTML response or create an API endpoint
                        // This is a simplified version:
                        $('#modalPatient').text(info.event.title.split(' - ')[0]);
                        $('#modalVet').text(info.event.extendedProps.vetName);
                        $('#modalTime').text(info.event.start.toLocaleString() + ' to ' + info.event.end.toLocaleString());
                        $('#modalReason').text(info.event.title.split(' - ')[1]);
                        $('#modalStatus').text(info.event.backgroundColor === '#28a745' ? 'Completed' :
                                             info.event.backgroundColor === '#dc3545' ? 'Cancelled' : 'Scheduled');
                        $('#modalEditLink').attr('href', '/Appointments/Edit/' + info.event.id);
                        $('#eventModal').modal('show');
                    });
                },
                eventTimeFormat: {
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: true
                },
                navLinks: true,
                nowIndicator: true,
                dayMaxEvents: true,
                editable: false
            });
            calendar.render();
        });
    </script>
}