@model IEnumerable<PetClinicSystem.Models.Patient>


@{
    ViewData["Title"] = "My Pets";
    ViewData["ActivePage"] = "Patients";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-paw me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add New Pet
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="patientsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Owner</th>
                            <th>Species/Breed</th>
                            <th>Age</th>
                            <th>Last Visit</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.PhotoPath))
                                        {
                                            <img src="@item.PhotoPath" class="avatar-sm rounded-circle me-3" alt="@item.Name">
                                        }
                                        else
                                        {
                                            <div class="avatar-sm bg-soft-primary rounded-circle me-3 d-flex align-items-center justify-content-center">
                                                <i class="fas fa-paw"></i>
                                            </div>
                                        }
                                        <div>
                                            <strong>@item.Name</strong>
                                            <div class="text-muted small">@item.Gender</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Owner?.FirstName @item.Owner?.LastName</td>
                                <td>
                                    @item.Species
                                    @if (!string.IsNullOrEmpty(item.Breed))
                                    {
                                        <span class="text-muted d-block small">@item.Breed</span>
                                    }
                                </td>
                                <td>
                                    @if (item.DateOfBirth.HasValue)
                                    {
                                        var dob = item.DateOfBirth.Value;
                                        var today = DateOnly.FromDateTime(DateTime.Today);
                                        var age = today.Year - dob.Year;

                                        if (dob > today.AddYears(-age))
                                        {
                                            age--;
                                        }

                                        <span>@age years</span>
                                    }

                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var lastVisit = item.Consultations?.OrderByDescending(c => c.ConsultationDate).FirstOrDefault();
                                    }
                                    @if (lastVisit != null)
                                    {
                                        <span>@lastVisit.ConsultationDate?.ToString("MMM dd, yyyy")</span>
                                        <span class="d-block small text-muted">@lastVisit.Diagnosis?</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No visits</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@item.PatientId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.PatientId" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.PatientId">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            object-fit: cover;
        }

        .page-title {
            font-weight: 600;
            color: #2c3e50;
        }

        .table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#patientsTable').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: -1 }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search pets...",
                }
            });

            // Delete button handler
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('/Patients/Delete/' + id, function() {
                            Swal.fire(
                                'Deleted!',
                                'The pet record has been deleted.',
                                'success'
                            ).then(() => location.reload());
                        }).fail(function() {
                            Swal.fire(
                                'Error!',
                                'Something went wrong.',
                                'error'
                            );
                        });
                    }
                });
            });
        });
    </script>
}