@model PetClinicSystem.Models.Patient

@{
    ViewData["Title"] = "Pet Details";
    ViewData["ActivePage"] = "Patients";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-paw me-2"></i>@Model.Name's Details
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <img src="@Model.PhotoPath" class="avatar-xl rounded-circle mb-3" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="avatar-xl bg-soft-primary rounded-circle mb-3 d-flex align-items-center justify-content-center mx-auto">
                            <i class="fas fa-paw fa-2x"></i>
                        </div>
                    }
                    <h3 class="mb-1">@Model.Name</h3>
                    <div class="text-muted mb-3">@Model.Species | @Model.Breed</div>

                    <div class="d-flex justify-content-center gap-3 mb-4">
                        <div class="text-center">
                            <div class="fw-bold">Age</div>
                            <div>
                                @if (Model.DateOfBirth.HasValue)
                                {
                                    var dob = Model.DateOfBirth.Value;
                                    var today = DateOnly.FromDateTime(DateTime.Today);
                                    var age = today.Year - dob.Year;

                                    if (dob > today.AddYears(-age))
                                    {
                                        age--;
                                    }

                                    <span>@age years</span>
                                }

                                else
                                {
                                    <span class="text-muted">Unknown</span>
                                }
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold">Gender</div>
                            <div>@Model.Gender</div>
                        </div>
                        <div class="text-center">
                            <div class="fw-bold">Color</div>
                            <div>@(Model.Color ?? "N/A")</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.MicrochipId))
                    {
                        <div class="mb-3">
                            <div class="fw-bold">Microchip ID</div>
                            <div>@Model.MicrochipId</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Owner Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="fw-bold">Owner Name</div>
                        <div>@Model.Owner?.FirstName @Model.Owner?.LastName</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Contact</div>
                        <div>@Model.Owner?.Phone</div>
                        <div>@Model.Owner?.Email</div>
                    </div>
                    <div class="mb-3">
                        <div class="fw-bold">Address</div>
                        <div>@Model.Owner?.Address</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Medical Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="fw-bold">Species</div>
                                <div>@Model.Species</div>
                            </div>
                            <div class="mb-3">
                                <div class="fw-bold">Breed</div>
                                <div>@(Model.Breed ?? "N/A")</div>
                            </div>
                            <div class="mb-3">
                                <div class="fw-bold">Date of Birth</div>
                                <div>@(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "Unknown")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="fw-bold">Allergies</div>
                                <div>@(string.IsNullOrEmpty(Model.Allergies) ? "None reported" : Model.Allergies)</div>
                            </div>
                            <div class="mb-3">
                                <div class="fw-bold">Medical Notes</div>
                                <div>@(string.IsNullOrEmpty(Model.MedicalNotes) ? "No notes" : Model.MedicalNotes)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-calendar-check me-2"></i>Recent Appointments
                        </h5>
                        <a asp-controller="Appointments" asp-action="Create" asp-route-patientId="@Model.PatientId" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus me-1"></i>New Appointment
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Appointments?.Any() ?? false)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Veterinarian</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments.OrderByDescending(a => a.AppointmentDate).Take(5))
                                    {
                                        <tr>
                                            <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                            <td>Dr. @appointment.Vet?.LastName</td>
                                            <td>@appointment.Reason</td>
                                            <td>
                                                <span class="badge bg-@(appointment.Status == "Completed" ? "success" :
                                                                                                                          appointment.Status == "Cancelled" ? "danger" : "info")">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Appointments" asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                                                }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            No appointment history found for this pet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-xl {
            width: 120px;
            height: 120px;
            object-fit: cover;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
    </style>
}