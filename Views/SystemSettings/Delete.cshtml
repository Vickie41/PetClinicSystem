@model PetClinicSystem.Models.SystemSetting

@{
    ViewData["Title"] = "Delete System Setting";
}

<div class="container-fluid">
    <h2 class="page-title"><i class="fas fa-sliders-h me-2"></i>@ViewData["Title"]</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <h5>Are you sure you want to delete this setting?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-2">Key</dt>
                <dd class="col-sm-10">@Model.Key</dd>

                <dt class="col-sm-2">Value</dt>
                <dd class="col-sm-10">@Model.Value</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
