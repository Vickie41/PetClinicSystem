@model PetClinicSystem.Models.SystemSetting

@{
    ViewData["Title"] = "System Setting Details";
}

<div class="container-fluid">
    <h2 class="page-title"><i class="fas fa-sliders-h me-2"></i>@ViewData["Title"]</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Key</dt>
                <dd class="col-sm-10">@Model.Key</dd>

                <dt class="col-sm-2">Value</dt>
                <dd class="col-sm-10">@Model.Value</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Description</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
        </div>
    </div>
</div>
