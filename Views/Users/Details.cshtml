@model PetClinicSystem.Models.User

@{
    ViewData["Title"] = "User Details";
    ViewData["ActivePage"] = "Users";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-users-cog me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-6">
                    <strong>Username:</strong>
                    <p>@Model.Username</p>
                </div>
                <div class="col-md-6">
                    <strong>Email:</strong>
                    <p>@Model.Email</p>
                </div>
                <div class="col-md-6">
                    <strong>Role:</strong>
                    <p>@Model.Role</p>
                </div>
                <div class="col-md-6">
                    <strong>First Name:</strong>
                    <p>@Model.FirstName</p>
                </div>
                <div class="col-md-6">
                    <strong>Last Name:</strong>
                    <p>@Model.LastName</p>
                </div>
                <div class="col-md-6">
                    <strong>Phone:</strong>
                    <p>@Model.Phone</p>
                </div>
                <div class="col-md-6">
                    <strong>Active:</strong>
                    <p>@(Model.IsActive == true ? "Yes" : "No")</p>
                </div>
                <div class="col-md-6">
                    <strong>Created Date:</strong>
                    <p>@Model.CreatedDate?.ToString("MMM dd, yyyy")</p>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title {
            font-weight: 600;
            color: #2c3e50;
        }

        .card-body p {
            margin-bottom: 0.5rem;
        }

        .card-body strong {
            color: #495057;
        }
    </style>
}
