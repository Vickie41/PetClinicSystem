@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinicPro</title>

    <!-- Bootstrap 5 CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Toastr Notifications -->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <div class="clinic-logo">
                    <img src="~/img/logo-white.png" alt="VetClinicPro">
                </div>
                <button type="button" id="sidebarCollapse" class="btn btn-sm btn-sidebar-toggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <div class="sidebar-profile">
                <div class="profile-image">
                    <img src="~/img/users/@(User.FindFirst("ProfileImage")?.Value ?? "default-profile.jpg")" alt="@User.Identity.Name">
                </div>
                <div class="profile-info">
                    <h5>@User.Identity.Name</h5>
                    <span class="badge bg-primary">@User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value</span>
                </div>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="/Dashboard" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Appointment Module -->
                <li>
                    <a href="#appointmentSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                        <i class="fas fa-calendar-check"></i>
                        <span>Appointments</span>
                        <i class="fas fa-angle-down dropdown-icon"></i>
                    </a>
                    <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "show" : "")" id="appointmentSubmenu">
                        <li>
                            <a href="/Appointments/Schedule" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Schedule" ? "active" : "")">
                                <i class="fas fa-plus-circle"></i>
                                Schedule New
                            </a>
                        </li>
                        <li>
                            <a href="/Appointments/Calendar" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Calendar" ? "active" : "")">
                                <i class="fas fa-calendar-alt"></i>
                                Calendar View
                            </a>
                        </li>
                        <li>
                            <a href="/Appointments" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                <i class="fas fa-list"></i>
                                Manage Appointments
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Patient & Owner Module -->
                @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Veterinarian"))
                {
                    <li>
                        <a href="#patientSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                            <i class="fas fa-paw"></i>
                            <span>Patients & Owners</span>
                            <i class="fas fa-angle-down dropdown-icon"></i>
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "show" : "")" id="patientSubmenu">
                            <li>
                                <a href="/Patients/Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                                    <i class="fas fa-plus-circle"></i>
                                    Register Patient
                                </a>
                            </li>
                            <li>
                                <a href="/Patients" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    Patient List
                                </a>
                            </li>
                            <li>
                                <a href="/Owners/Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                                    <i class="fas fa-user-plus"></i>
                                    Register Owner
                                </a>
                            </li>
                            <li>
                                <a href="/Owners" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                                    <i class="fas fa-users"></i>
                                    Owner List
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Patients" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                            <i class="fas fa-paw"></i>
                            <span>My Pets</span>
                        </a>
                    </li>
                }

                <!-- Medical Records Module -->
                @if (User.IsInRole("Admin") || User.IsInRole("Veterinarian") || User.IsInRole("Staff"))
                {
                    <li>
                        <a href="#medicalSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "VaccineRecords" || ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" ? "active" : "")">
                            <i class="fas fa-notes-medical"></i>
                            <span>Medical Records</span>
                            <i class="fas fa-angle-down dropdown-icon"></i>
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "VaccineRecords" || ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" ? "show" : "")" id="medicalSubmenu">
                            <li>
                                <a href="/Consultations" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" ? "active" : "")">
                                    <i class="fas fa-stethoscope"></i>
                                    Consultations
                                </a>
                            </li>
                            <li>
                                <a href="/VaccineRecords" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "VaccineRecords" ? "active" : "")">
                                    <i class="fas fa-syringe"></i>
                                    Vaccinations
                                </a>
                            </li>
                            <li>
                                <a href="/DiagnosticTests" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" ? "active" : "")">
                                    <i class="fas fa-microscope"></i>
                                    Diagnostic Tests
                                </a>
                            </li>
                            <li>
                                <a href="/Prescriptions" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" ? "active" : "")">
                                    <i class="fas fa-prescription-bottle-alt"></i>
                                    Prescriptions
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/VaccineRecords" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "VaccineRecords" ? "active" : "")">
                            <i class="fas fa-syringe"></i>
                            <span>Vaccinations</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Prescriptions" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" ? "active" : "")">
                            <i class="fas fa-prescription-bottle-alt"></i>
                            <span>Prescriptions</span>
                        </a>
                    </li>
                }

                <!-- Billing Module -->
                @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                {
                    <li>
                        <a href="#billingSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billings" || ViewContext.RouteData.Values["Controller"]?.ToString() == "BillingDetails" ? "active" : "")">
                            <i class="fas fa-file-invoice-dollar"></i>
                            <span>Billing</span>
                            <i class="fas fa-angle-down dropdown-icon"></i>
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billings" || ViewContext.RouteData.Values["Controller"]?.ToString() == "BillingDetails" ? "show" : "")" id="billingSubmenu">
                            <li>
                                <a href="/Billings" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billings" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                    <i class="fas fa-list"></i>
                                    Bills Overview
                                </a>
                            </li>
                            <li>
                                <a href="/Billings/Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Billings" ? "active" : "")">
                                    <i class="fas fa-plus-circle"></i>
                                    Create New Bill
                                </a>
                            </li>
                            <li>
                                <a href="/BillingDetails" class="sidebar-sublink @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BillingDetails" ? "active" : "")">
                                    <i class="fas fa-receipt"></i>
                                    Billing Details
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                else if (User.IsInRole("Client"))
                {
                    <li>
                        <a href="/Billings" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billings" ? "active" : "")">
                            <i class="fas fa-file-invoice-dollar"></i>
                            <span>My Bills</span>
                        </a>
                    </li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <!-- Admin Section -->
                    <li>
                        <a href="#adminSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")">
                            <i class="fas fa-user-shield"></i>
                            <span>Administration</span>
                            <i class="fas fa-angle-down dropdown-icon"></i>
                        </a>
                        <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "show" : "")" id="adminSubmenu">
                            <li>
                                <a href="/Admin/Users" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")">
                                    <i class="fas fa-users-cog"></i>
                                    User Management
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Roles" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Roles" ? "active" : "")">
                                    <i class="fas fa-user-tag"></i>
                                    Role Management
                                </a>
                            </li>
                            <li>
                                <a href="/Admin/Settings" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active" : "")">
                                    <i class="fas fa-cogs"></i>
                                    System Settings
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>

                    <div class="d-flex align-items-center">
                        <!-- Quick Patient Search -->
                        <div class="me-3">
                            <form class="d-flex" action="/Patients/Search" method="get">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search patient..." name="searchTerm">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Notifications -->
                        <div class="dropdown me-3">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="badge bg-danger notification-count">0</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                <li id="notificationList">
                                    <div class="text-center p-2">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Notifications">View all notifications</a></li>
                            </ul>
                        </div>

                        <!-- User Profile -->
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>
                                @User.Identity.Name
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger ms-1">Admin</span>
                                }
                                else if (User.IsInRole("Veterinarian"))
                                {
                                    <span class="badge bg-primary ms-1">Vet</span>
                                }
                                else if (User.IsInRole("Staff"))
                                {
                                    <span class="badge bg-success ms-1">Staff</span>
                                }
                                else if (User.IsInRole("Client"))
                                {
                                    <span class="badge bg-info ms-1">Client</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="mt-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js -->
    <script src="~/lib/chart.js/chart.min.js"></script>

    <!-- Toastr Notifications -->
    <script src="~/lib/toastr/toastr.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <!-- Notification System -->
    <script>
        $(document).ready(function() {
            // Load notifications
            function loadNotifications() {
                $.get('/Notifications/GetRecent', function(data) {
                    $('#notificationList').empty();
                    if (data.length > 0) {
                        data.forEach(function(notification) {
                            $('#notificationList').append(
                                `<li><a class="dropdown-item" href="${notification.url}">${notification.message}</a></li>`
                            );
                        });
                        $('.notification-count').text(data.length).removeClass('d-none');
                    } else {
                        $('#notificationList').append(
                            '<li><a class="dropdown-item text-muted" href="#">No new notifications</a></li>'
                        );
                        $('.notification-count').addClass('d-none');
                    }
                });
            }

            // Initial load
            loadNotifications();

            // Refresh every 60 seconds
            setInterval(loadNotifications, 60000);

            // Toggle sidebar
            $('#sidebarCollapse').on('click', function() {
                $('#sidebar').toggleClass('active');
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Show toast notifications
            @if (TempData["ToastMessage"] != null)
            {
                    <text>toastr.success('@TempData["ToastMessage"]');</text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>