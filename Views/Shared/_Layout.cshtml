@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinicPro</title>

    <!-- Bootstrap 5 CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="~/lib/fontawesome/fontawesome-free-7.0.0-web/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Toastr Notifications -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* Improved wrapper and layout */
        .wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Sidebar styling */
        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #343a40;
            color: #fff;
            transition: all 0.3s ease;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            #sidebar.active {
                margin-left: -250px;
            }

        /* Content area styling */
        #content {
            width: calc(100% - 250px);
            min-height: 100vh;
            transition: all 0.3s ease;
            margin-left: 250px;
            position: relative;
            padding-top: 20px;
        }

        #sidebar.active ~ #content {
            width: 100%;
            margin-left: 0;
        }

        /* Mobile responsiveness */
        @@media (max-width: 768px) {
            #sidebar {
                margin-left: -250px;
            }

                #sidebar.active {
                    margin-left: 0;
                }

            #content {
                width: 100%;
                margin-left: 0 !important;
            }
        }

        /* Sidebar navigation items */
        .sidebar-link, .sidebar-sublink {
            color: rgba(255, 255, 255, 0.8);
            padding: 10px 15px;
            display: block;
            text-decoration: none;
            transition: all 0.3s;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

            .sidebar-link:hover, .sidebar-sublink:hover {
                color: #fff;
                background: rgba(255, 255, 255, 0.1);
            }

            .sidebar-link.active, .sidebar-sublink.active {
                color: #fff;
                background: rgba(255, 255, 255, 0.2);
            }

        /* Profile section */
        .sidebar-profile {
            padding: 20px 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        .profile-image img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
            border: 2px solid rgba(255,255,255,0.2);
        }

        /* Logo styling */
        .clinic-logo img {
            max-width: 180px;
            margin: 10px auto;
            display: block;
        }

        /* Dropdown arrows */
        .dropdown-icon {
            float: right;
            margin-top: 5px;
            transition: transform 0.3s;
        }

        [aria-expanded="true"] .dropdown-icon {
            transform: rotate(180deg);
        }

        /* Submenu items */
        .sidebar-sublink {
            padding-left: 30px;
            font-size: 0.9em;
            background: rgba(0,0,0,0.1);
        }

        /* Sidebar toggle buttons */
        .btn-sidebar-toggle {
            position: absolute;
            right: 10px;
            top: 10px;
            background: rgba(255,255,255,0.1);
            color: white;
            border: none;
        }

            .btn-sidebar-toggle:hover {
                background: rgba(255,255,255,0.2);
            }

        /* Top navbar adjustments */
        .navbar {
            padding: 10px 20px;
            z-index: 800;
            position: relative;
        }

        /* Ensure content doesn't hide behind navbar */
        .main-content {
            padding-top: 70px;
            padding-left: 20px;
            padding-right: 20px;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <div class="clinic-logo">
                    <img src="~/image/logo-white.jpg" alt="VetClinicPro">
                </div>
                <button type="button" id="sidebarToggleInner" class="btn btn-sm btn-sidebar-toggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="sidebar-profile">
                    <div class="profile-image">
                        <img src="~/image/user.png" alt="@User.Identity.Name">
                    </div>
                    <div class="profile-info">
                        <h5>@User.Identity.Name</h5>
                        <span class="badge bg-primary">@User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value</span>
                    </div>
                </div>
            }

            <ul class="list-unstyled components">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a asp-controller="Home" asp-action="Dashboard" class="sidebar-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- Appointment Module -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Veterinarian") || User.IsInRole("Client"))
                    {
                        <li>
                            <a href="#appointmentSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "active" : "")">
                                <i class="fas fa-calendar-check"></i>
                                <span>Appointments</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Appointments" ? "show" : "")" id="appointmentSubmenu">
                                @if (User.IsInRole("Staff") || User.IsInRole("Client"))
                                {
                                    <li>
                                        <a asp-controller="Appointments" asp-action="Schedule" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Schedule" ? "active" : "")">
                                            <i class="fas fa-plus-circle"></i>
                                            Schedule New
                                        </a>
                                    </li>
                                }
                                <li>
                                    <a asp-controller="Appointments" asp-action="Calendar" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Calendar" ? "active" : "")">
                                        <i class="fas fa-calendar-alt"></i>
                                        Calendar View
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Appointments" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                        <i class="fas fa-list"></i>
                                        @(User.IsInRole("Client") ? "My Appointments" : "Manage Appointments")
                                    </a>
                                </li>
                            </ul>

                        </li>
                    }

                    <!-- Patient & Owner Module -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Veterinarian"))
                    {
                        <li>
                            <a href="#patientSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                                <i class="fas fa-paw"></i>
                                <span>Patients & Owners</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "show" : "")" id="patientSubmenu">
                               @*  <li>
                                    <a asp-controller="Patients" asp-action="Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                                        <i class="fas fa-plus-circle"></i>
                                        Register Patient
                                    </a>
                                </li> *@
                                <li>
                                    <a asp-controller="Patients" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                                        <i class="fas fa-list"></i>
                                        Patient List
                                    </a>
                                </li>
                                @if (User.IsInRole("Staff"))
                                {
                                    <li>
                                        <a asp-controller="Owners" asp-action="Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                                            <i class="fas fa-user-plus"></i>
                                            Register Owner
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a asp-controller="Owners" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Owners" ? "active" : "")">
                                        <i class="fas fa-users"></i>
                                        Owner List
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <li>
                            <a asp-controller="Patients" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Patients" ? "active" : "")">
                                <i class="fas fa-paw"></i>
                                <span>My Pets</span>
                            </a>
                        </li>
                    }

                    <!-- Medical Services Module -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Veterinarian") || User.IsInRole("Staff"))
                    {
                        <li>
                            <a href="#medicalSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Vaccinations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" ? "active" : "")">
                                <i class="fas fa-medkit"></i>
                                <span>Medical Services</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Vaccinations" || ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" ? "show" : "")" id="medicalSubmenu">
                                <li>
                                    <a asp-controller="Consultations" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Consultations" ? "active" : "")">
                                        <i class="fas fa-stethoscope"></i>
                                        Consultations
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Treatments" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Treatments" ? "active" : "")">
                                        <i class="fas fa-heartbeat"></i>
                                        Treatments
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Prescriptions" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Prescriptions" ? "active" : "")">
                                        <i class="fas fa-prescription-bottle-alt"></i>
                                        Prescriptions
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Vaccinations" asp-action="Index" asp-action="Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Vaccinations" ? "active" : "")">
                                        <i class="fas fa-syringe"></i>
                                        Vaccinations
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="DiagnosticTests" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "DiagnosticTests" ? "active" : "")">
                                        <i class="fas fa-microscope"></i>
                                        Diagnostic Tests
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <!-- Billing Module -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <li>
                            <a href="#billingSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" || ViewContext.RouteData.Values["Controller"]?.ToString() == "BillingDetails" ? "active" : "")">
                                <i class="fas fa-file-invoice-dollar"></i>
                                <span>Billing</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" || ViewContext.RouteData.Values["Controller"]?.ToString() == "BillingDetails" ? "show" : "")" id="billingSubmenu">
                                <li>
                                    <a asp-controller="Billings" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" ? "active" : "")">
                                        <i class="fas fa-list"></i>
                                        Invoices
                                    </a>
                                </li>
                                @if (User.IsInRole("Staff"))
                                {
                                    <li>
                                        <a asp-controller="Billings" asp-action="Create" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Create" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" ? "active" : "")">
                                            <i class="fas fa-plus-circle"></i>
                                            Create Invoice
                                        </a>
                                    </li>
                                }

                                <li>
                                    <a asp-controller="Billings" asp-action="PaymentRecords" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Payments" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" ? "active" : "")">
                                        <i class="fas fa-money-bill-wave"></i>
                                        Payment Records
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <li>
                            <a asp-controller="Billings" asp-action="Index" class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Billing" ? "active" : "")">
                                <i class="fas fa-file-invoice-dollar"></i>
                                <span>My Invoices</span>
                            </a>
                        </li>
                    }

                    <!-- Reports Module -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Veterinarian") || User.IsInRole("Staff"))
                    {
                        <li>
                            <a href="#reportsSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
                                <i class="fas fa-chart-bar"></i>
                                <span>Reports</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "show" : "")" id="reportsSubmenu">
                                <li>
                                    <a asp-controller="Report" asp-action="AppointmentReports" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Appointments" ? "active" : "")">
                                        <i class="fas fa-calendar"></i>
                                        Appointment Reports
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Report" asp-action="MedicalReports" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Medical" ? "active" : "")">
                                        <i class="fas fa-medkit"></i>
                                        Medical Reports
                                    </a>
                                </li>
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a asp-controller="Report" asp-action="SystemReports" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "System" ? "active" : "")">
                                            <i class="fas fa-cogs"></i>
                                            System Reports
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Report" asp-action="FinancialReports" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Financial" ? "active" : "")">
                                            <i class="fas fa-chart-line"></i>
                                            Financial Reports
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }

                    <!-- Administration Module (Admin only) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="#adminSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="sidebar-link dropdown-toggle @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")">
                                <i class="fas fa-cogs"></i>
                                <span>Administration</span>
                                <i class="fas fa-angle-down dropdown-icon"></i>
                            </a>
                            <ul class="collapse list-unstyled @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" || ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "show" : "")" id="adminSubmenu">
                                <li>
                                    <a asp-controller="Users" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")">
                                        <i class="fas fa-users-cog"></i>
                                        User Management
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="SystemSettings" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")">
                                        <i class="fas fa-sliders-h"></i>
                                        System Settings
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="ActivityLog" asp-action="Index" class="sidebar-sublink @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "ActivityLog" ? "active" : "")">
                                        <i class="fas fa-history"></i>
                                        Activity Log
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                }
                else
                {
                    <li>
                        <a href="/Account/Login" class="sidebar-link">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Account/Register" class="sidebar-link">
                            <i class="fas fa-user-plus"></i>
                            <span>Register</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>


        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarToggle" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>

                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Quick Patient Search -->
                            <div class="me-3">
                                <form class="d-flex" action="/Patients/Search" method="get">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search patient..." name="searchTerm">
                                        <button class="btn btn-outline-secondary" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <!-- Notifications -->
                            <div class="dropdown me-3">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-bell"></i>
                                    <span class="badge bg-danger notification-count">0</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                    <li><h6 class="dropdown-header">Notifications</h6></li>
                                    <li id="notificationList">
                                        <div class="text-center p-2">
                                            <div class="spinner-border spinner-border-sm" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Notifications">View all notifications</a></li>
                                </ul>
                            </div>

                            <!-- User Profile -->
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                    else if (User.IsInRole("Veterinarian"))
                                    {
                                        <span class="badge bg-primary ms-1">Vet</span>
                                    }
                                    else if (User.IsInRole("Staff"))
                                    {
                                        <span class="badge bg-success ms-1">Staff</span>
                                    }
                                    else if (User.IsInRole("Client"))
                                    {
                                        <span class="badge bg-info ms-1">Client</span>
                                    }
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="ms-auto">
                                <a href="/Account/Login" class="btn btn-primary me-2">Login</a>
                                <a href="/Account/Register" class="btn btn-outline-secondary">Register</a>
                            </div>
                        }
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid main-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="mt-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>

    <!-- Bootstrap Bundle with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Toastr Notifications -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <script>
        $(document).ready(function() {
            console.log("Document ready - Sidebar script loaded");

            // Function to toggle sidebar
            function toggleSidebar() {
                $('#sidebar').toggleClass('active');
                var isCollapsed = $('#sidebar').hasClass('active');
                console.log("Sidebar state:", isCollapsed ? "Collapsed" : "Expanded");
                localStorage.setItem('sidebarCollapsed', isCollapsed);

                // Adjust content width
                if (isCollapsed) {
                    $('#content').css('width', '100%');
                } else {
                    $('#content').css('width', 'calc(100% - 250px)');
                }
            }

            // Handle both toggle buttons
            $('#sidebarToggle, #sidebarToggleInner').on('click', function() {
                toggleSidebar();
            });

            // Check localStorage for saved state
            var savedState = localStorage.getItem('sidebarCollapsed');
            console.log("Retrieved saved sidebar state:", savedState);

            if (savedState === 'true') {
                console.log("Applying saved collapsed state");
                $('#sidebar').addClass('active');
                $('#content').css('width', '100%');
            } else {
                console.log("No saved state or sidebar should be expanded");
                $('#sidebar').removeClass('active');
                $('#content').css('width', 'calc(100% - 250px)');
            }

            // Rest of your JavaScript remains the same
            // ...
        });
    </script>

