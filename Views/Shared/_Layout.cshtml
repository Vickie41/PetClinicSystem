<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetClinicPro</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- FullCalendar CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="active">
            <div class="sidebar-header">
                <h3>VetClinicPro</h3>
                <strong>VC</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a href="/Dashboard">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Appointment Module -->
                <li>
                    <a href="#appointmentSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-calendar-check"></i>
                        <span>Appointments</span>
                    </a>
                    <ul class="collapse list-unstyled" id="appointmentSubmenu">
                        <li>
                            <a href="/Appointments/Schedule">Schedule New</a>
                        </li>
                        <li>
                            <a href="/Appointments/Calendar">Calendar View</a>
                        </li>
                        <li>
                            <a href="/Appointments">Manage Appointments</a>
                        </li>
                    </ul>
                </li>

                <!-- Patient & Owner Module -->
                <li>
                    <a href="#patientSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-paw"></i>
                        <span>Patients & Owners</span>
                    </a>
                    <ul class="collapse list-unstyled" id="patientSubmenu">
                        <li>
                            <a href="/Patients/Create">Register New Patient</a>
                        </li>
                        <li>
                            <a href="/Patients">Patient List</a>
                        </li>
                        <li>
                            <a href="/Owners/Create">Register New Owner</a>
                        </li>
                        <li>
                            <a href="/Owners">Owner List</a>
                        </li>
                    </ul>
                </li>

                <!-- Medical Records Module -->
                <li>
                    <a href="#medicalSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-notes-medical"></i>
                        <span>Medical Records</span>
                    </a>
                    <ul class="collapse list-unstyled" id="medicalSubmenu">
                        <li>
                            <a href="/Consultations">Consultations</a>
                        </li>
                        <li>
                            <a href="/VaccineRecords">Vaccination Records</a>
                        </li>
                        <li>
                            <a href="/DiagnosticTests">Diagnostic Tests</a>
                        </li>
                        <li>
                            <a href="/Prescriptions">Prescriptions</a>
                        </li>
                    </ul>
                </li>

                <!-- Treatments & Services -->
                <li>
                    <a href="#treatmentSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-medkit"></i>
                        <span>Treatments & Services</span>
                    </a>
                    <ul class="collapse list-unstyled" id="treatmentSubmenu">
                        <li>
                            <a href="/Treatments">Treatment Catalog</a>
                        </li>
                        <li>
                            <a href="/Vaccinations">Vaccine Catalog</a>
                        </li>
                        <li>
                            <a href="/ConsultationTreatments">Treatment History</a>
                        </li>
                    </ul>
                </li>

                <!-- Billing Module -->
                <li>
                    <a href="#billingSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Billing</span>
                    </a>
                    <ul class="collapse list-unstyled" id="billingSubmenu">
                        <li>
                            <a href="/Billings">Bills Overview</a>
                        </li>
                        <li>
                            <a href="/Billings/Create">Create New Bill</a>
                        </li>
                        <li>
                            <a href="/BillingDetails">Billing Details</a>
                        </li>
                    </ul>
                </li>

                <!-- Reporting -->
                <li>
                    <a href="#reportingSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </a>
                    <ul class="collapse list-unstyled" id="reportingSubmenu">
                        <li>
                            <a href="/Reports/MedicalHistory">Medical History</a>
                        </li>
                        <li>
                            <a href="/Reports/VaccinationDue">Vaccination Due</a>
                        </li>
                        <li>
                            <a href="/Reports/Financial">Financial Reports</a>
                        </li>
                        <li>
                            <a href="/Reports/PatientStatistics">Patient Statistics</a>
                        </li>
                    </ul>
                </li>

                <!-- Admin Section (Visible only to Admin) -->
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a href="#adminSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fas fa-user-shield"></i>
                            <span>Administration</span>
                        </a>
                        <ul class="collapse list-unstyled" id="adminSubmenu">
                            <li>
                                <a href="/Admin/Users">User Management</a>
                            </li>
                            <li>
                                <a href="/Admin/Roles">Role Management</a>
                            </li>
                            <li>
                                <a href="/Admin/Settings">System Settings</a>
                            </li>
                            <li>
                                <a href="/Admin/Database">Database Tools</a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>

                    <div class="d-flex align-items-center">
                        <!-- Quick Patient Search -->
                        <div class="me-3">
                            <form class="d-flex" action="/Patients/Search" method="get">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search patient..." name="searchTerm">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Notifications -->
                        <div class="dropdown me-3">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="badge bg-danger notification-count">0</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                <li><h6 class="dropdown-header">Notifications</h6></li>
                                <li id="notificationList">
                                    <div class="text-center p-2">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Notifications">View all notifications</a></li>
                            </ul>
                        </div>

                        <!-- User Profile -->
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>
                                @User.Identity.Name
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger ms-1">Admin</span>
                                }
                                else if (User.IsInRole("Veterinarian"))
                                {
                                    <span class="badge bg-primary ms-1">Vet</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="/Settings"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="mt-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery, Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js"></script>

    <!-- Notification System -->
    <script>
        $(document).ready(function() {
            // Load notifications
            function loadNotifications() {
                $.get('/Notifications/GetRecent', function(data) {
                    $('#notificationList').empty();
                    if (data.length > 0) {
                        data.forEach(function(notification) {
                            $('#notificationList').append(
                                `<li><a class="dropdown-item" href="${notification.url}">${notification.message}</a></li>`
                            );
                        });
                        $('.notification-count').text(data.length).removeClass('d-none');
                    } else {
                        $('#notificationList').append(
                            '<li><a class="dropdown-item text-muted" href="#">No new notifications</a></li>'
                        );
                        $('.notification-count').addClass('d-none');
                    }
                });
            }

            // Initial load
            loadNotifications();

            // Refresh every 60 seconds
            setInterval(loadNotifications, 60000);

            // Toggle sidebar
            $('#sidebarCollapse').on('click', function() {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>