@model PetClinicSystem.Models.SystemReportsViewModel
@{
    ViewData["Title"] = "System Reports";
    ViewData["ActivePage"] = "Reports";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-cogs me-2"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">User Activity</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="activityTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>User</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ActivityLogs)
                                {
                                    <tr>
                                        <td>@item.Timestamp.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>@item.UserId</td>
                                        <td>@item.Action @item.Action</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">User Accounts</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="usersTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Last Login</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Users)
                                {
                                    <tr>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            @if (item.Role.Contains("Admin"))
                                            {
                                                <span class="badge bg-danger">Admin</span>
                                            }
                                            else if (item.Role.Contains("Veterinarian"))
                                            {
                                                <span class="badge bg-primary">Veterinarian</span>
                                            }
                                            else if (item.Role.Contains("Staff"))
                                            {
                                                <span class="badge bg-success">Staff</span>
                                            }
                                            else if (item.Role.Contains("Client"))
                                            {
                                                <span class="badge bg-info">Client</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">User</span>
                                            }
                                        </td>

@*                                         <td>@item.LastLoginDate?.ToString("MMM dd, yyyy")</td>
 *@                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#activityTable').DataTable({
                order: [[0, 'desc']]
            });
            $('#usersTable').DataTable();
        });
    </script>
}