@model PetClinicSystem.Models.ConsultantReportsViewModel

@{
    ViewData["Title"] = "Consultant Reports";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fas fa-user-md"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form method="get" class="mb-4">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="startDate">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-md-3">
                    <label for="endDate">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-md-3 align-self-end">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </form>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Consultations</h5>
                        <p class="display-4 text-primary">@Model.TotalConsultations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title text-center">Consultations by Veterinarian</h5>
                        <canvas id="vetChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Veterinarian</th>
                        <th>Reason</th>
                        <th>Diagnosis</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var consultation in Model.Consultations)
                    {
                        <tr>
                            <td>@consultation.ConsultationDate</td>
                            <td>@consultation.Patient.Name</td>
                            <td>@consultation.Vet.FirstName</td>
                            <td>@consultation.Notes</td>
                            <td>@consultation.Diagnosis</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('vetChart').getContext('2d');
            var vetChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.ConsultationsByVet.Keys)),
                    datasets: [{
                        label: 'Number of Consultations',
                        data: @Html.Raw(Json.Serialize(Model.ConsultationsByVet.Values)),
                        backgroundColor: 'rgba(54, 162, 235, 0.7)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        });
    </script>
}