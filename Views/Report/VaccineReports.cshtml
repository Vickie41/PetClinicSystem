@model PetClinicSystem.Models.VaccineReportsViewModel

@{
    ViewData["Title"] = "Vaccine Reports";
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="fa-solid fa-syringe"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">
        <form method="get" class="mb-4">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="startDate">Start Date</label>
                    <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-md-3">
                    <label for="endDate">End Date</label>
                    <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group col-md-3 align-self-end">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </form>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Vaccines</h5>
                        <p class="display-4 text-primary">@Model.TotalVaccines</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Most Common Vaccine</h5>
                        <p class="display-6 text-primary">@Model.MostCommonVaccine</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Owner</th>
                        <th>Vaccine</th>
                        <th>Administered By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.VaccineRecords)
                    {
                        <tr>
                            <td>@record.DateGiven.ToString("d")</td>
                            <td>@record.Patient.Name</td>
                            <td>@record.Patient.Owner.FirstName</td>
                            <td>@record.Vaccine.Name</td>
                            <td>@record.AdministeredByNavigation.FirstName</td> <!-- Adjust based on your User model -->
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>