@model PetClinicSystem.Models.FinancialReportsViewModel
@{
    ViewData["Title"] = "Financial Reports";
    ViewData["ActivePage"] = "Reports";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-chart-line me-2"></i>@ViewData["Title"]
            </h2>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Revenue</h5>
                    <h2 class="text-success">@Model.TotalRevenue.ToString("C")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Outstanding Balance</h5>
                    <h2 class="text-danger">@Model.OutstandingBalance.ToString("C")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Billing Records</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="billingTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Invoice #</th>
                                    <th>Date</th>
                                    <th>Patient</th>
                                    <th>Service</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-end">Paid</th>
                                    <th class="text-end">Balance</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Bills)
                                {
                                    <tr>
                                        <td>@item.BillId</td>
                                        <td>@item.BillDate</td>
                                        <td>
                                            @(item.Consultation?.Patient?.Name ?? item.Appointment?.Patient?.Name)
                                        </td>
                                        <td>
                                            @if (item.Consultation != null)
                                            {
                                                <span>Consultation</span>
                                            }
                                            else if (item.Appointment != null)
                                            {
                                                <span>Appointment</span>
                                            }
                                        </td>
                                        <td class="text-end">@item.TotalAmount.ToString("C")</td>
                                        <td class="text-end">@item.PaidAmount?.ToString("C")</td>
                                        <td class="text-end">
                                            @if (item.Balance > 0)
                                            {
                                                <span class="text-danger">@item.Balance?.ToString("C")</span>
                                            }
                                            else
                                            {
                                                <span class="text-success">@item.Balance?.ToString("C")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Status == "Paid")
                                            {
                                                <span class="badge bg-success">@item.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">@item.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Payment History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="paymentTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Invoice #</th>
                                    <th>Amount</th>
                                    <th>Method</th>
                                    <th>Received By</th>
                                </tr>
                            </thead>
                            @* <tbody>
                                @foreach (var item in Model.Payments)
                                {
                                    <tr>
                                        <td>@item.PaymentDate.ToString("MMM dd, yyyy")</td>
                                        <td>@item.BillingId</td>
                                        <td class="text-end">@item.Amount.ToString("C")</td>
                                        <td>@item.PaymentMethod</td>
                                        <td>@item.ReceivedBy</td>
                                    </tr>
                                }
                            </tbody> *@
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#billingTable').DataTable({
                order: [[1, 'desc']]
            });
            $('#paymentTable').DataTable({
                order: [[0, 'desc']]
            });
        });
    </script>
}