@model IEnumerable<PetClinicSystem.Models.Owner>

@{
    ViewData["Title"] = "Pet Owners";
    ViewData["ActivePage"] = "Owners";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="page-title">
                <i class="fas fa-users me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="col-md-6 text-end">
            @if (User.IsInRole("Staff") || User.IsInRole("Client"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Owner
                </a>
            }
        </div>

    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="ownersTable">
                    <thead class="table-light">
                        <tr>
                            <th>Owner</th>
                            <th>Contact Info</th>
                            <th>Address</th>
                            <th>Emergency Contact</th>
                            <th>Registered</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-soft-primary rounded-circle me-3 d-flex align-items-center justify-content-center">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <strong>@item.FirstName @item.LastName</strong>
                                            <div class="text-muted small">@item.Email</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @item.Phone
                                    @if (!string.IsNullOrEmpty(item.Email))
                                    {
                                        <span class="d-block small text-muted">@item.Email</span>
                                    }
                                </td>
                                <td>
                                    @item.Address
                                    <span class="d-block small text-muted">@item.City, @item.State @item.ZipCode</span>
                                </td>
                                <td>
                                    @item.EmergencyContact
                                    @if (!string.IsNullOrEmpty(item.EmergencyPhone))
                                    {
                                        <span class="d-block small text-muted">@item.EmergencyPhone</span>
                                    }
                                </td>
                                <td>
                                    @item.CreatedDate
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@item.OwnerId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Staff") || User.IsInRole("Client"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.OwnerId" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.OwnerId">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            object-fit: cover;
        }

        .page-title {
            font-weight: 600;
            color: #2c3e50;
        }

        .table th {
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ownersTable').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: -1 }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search owners...",
                }
            });

            // Delete button handler
            $('.delete-btn').click(function() {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('/Owners/Delete/' + id, function() {
                            Swal.fire(
                                'Deleted!',
                                'The owner record has been deleted.',
                                'success'
                            ).then(() => location.reload());
                        }).fail(function() {
                            Swal.fire(
                                'Error!',
                                'Something went wrong.',
                                'error'
                            );
                        });
                    }
                });
            });
        });
    </script>
}